{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Address list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Familyname</th>
                <th>Phone</th>
                <th>Street</th>
                <th>Zip</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.familyName }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.zip }}</td>
                <td>{{ entity.city }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('address_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('address_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('address_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
