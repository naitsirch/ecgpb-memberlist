{% extends '/base.html.twig' %}

{% block body -%}
    <h2>{% trans %}PDF Settings{% endtrans %}</h2>

    <form action="{{ path('ecgpb.member.export.pdf') }}" method="get" role="form" class="form-horizontal">
        <div class="form-group">
            <label class="col-md-3 control-label">
                {% trans %}Pages with member placeholders{% endtrans %}
            </label>
            <div class="col-md-3">
                <input type="number" class="form-control" name="pages_with_member_placeholders" value="1" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">
                {% trans %}Pages for personal notes{% endtrans %}
            </label>
            <div class="col-md-3">
                <input type="number" class="form-control" name="pages_for_notes" value="1" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9 text-danger">
                <strong>{% trans %}Keep in mind that the number of pages has be devideable by four, for printing.{% endtrans %}</strong>
            </div>
            <div class="col-md-offset-3 col-md-3">
                <button type="submit" class="btn btn-outline-dark">
                    {% trans %}Okay{% endtrans %}
                </button>
            </div>
        </div>
    </form>
{% endblock %}