{% extends '/base.html.twig' %}

{% block body -%}
    <h1>Person list</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Birthdate</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Phone2</th>
                <th>Maidenname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ecgpb.member.person.edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{% if entity.dob %}{{ entity.dob|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.phone2 }}</td>
                <td>{{ entity.maidenName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ecgpb.member.person.edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('ecgpb.member.person.delete', {'id': entity.id}) }}">delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ecgpb.member.person.new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
