<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ECGPB{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('components/bootstrap/dist/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" media="screen" />
            <link href="{{ asset('components/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" media="screen" />
            <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" media="screen" />
            <link href="{{ asset('css/print.css') }}" type="text/css" rel="stylesheet" media="print" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    {% block body_start%}<body>{% endblock %}
        <div class="container-fluid">
            <div class="row print-not">
                <div class="col-md-12">
                    <nav class="navbar navbar-default" role="navigation">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">
                                ECGPB {% trans %}Member List{% endtrans %}
                            </a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li {#class="active"#}>
                                    <a href="{{ path('ecgpb.member.address.index') }}">
                                        {% trans %}Addresses{% endtrans %}
                                    </a>
                                </li>
                                {#<li>
                                    <a href="{{ path('ecgpb.member.person.index') }}">
                                        {% trans %}Persons{% endtrans %}
                                    </a>
                                </li>#}
                                <li>
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        {% trans %}Working Groups{% endtrans %}
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('ecgpb.member.workinggroup.index') }}">
                                                {% trans %}Working Groups{% endtrans %}
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecgpb.member.workinggroup.assignables') }}">
                                                {% trans %}Unassigned Persons{% endtrans %}
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecgpb.member.workinggroup.persons_unable_to_work') }}">
                                                {% trans %}Persons unable to work{% endtrans %}
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="{{ path('ecgpb.member.ministry_category.index') }}">
                                        {% trans %}Ministries{% endtrans %}
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        {% trans %}Export{% endtrans %}
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('ecgpb.member.export.pdf_config') }}">
                                                {% trans %}Member List{% endtrans %} (PDF)
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecgpb.member.export.csv') }}">
                                                {% trans %}Member List{% endtrans %} (CSV)
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecgpb.member.export.birthday_excel') }}">
                                                {% trans %}Birthday List{% endtrans %} (Excel)
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecgpb.member.export.seniors_excel') }}">
                                                {% trans %}Seniors List{% endtrans %} (Excel)
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ecgpb.member.export.email_addresses') }}">
                                                {% trans %}Email Addresses{% endtrans %}
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('app.stats.index') }}">
                                                {% trans %}Statistics{% endtrans %}
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="flashes">
                        {% for type, flashes in app.session.flashBag.all %}
                            {% set cssType = type == 'error' ? 'danger' : type %}
                            {% for message in flashes %}
                                <div class="alert alert-{{ type }}">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    {{ message | trans }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    <div id="body-block" class="clearfix">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('components/jquery/dist/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('components/angular/angular.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('components/angular-bootstrap/ui-bootstrap-tpls.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/mopabootstrap/js/mopabootstrap-collection.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/app/js/naitsirch-angular-helpers.js') }}"></script>
        {% endblock %}
    </body>
</html>
